---
// src/pages/followed-artists.astro
import Layout from '../layouts/Layout.astro';
import SideNavigation from '../components/SideNavigation';
import FollowedArtists from '../components/FollowedArtists';
import AuthHeader from '../components/AuthHeader';
import ProtectedRoute from '../components/ProtectedRoute';
import { AuthProvider } from '../contexts/AuthContext';
---

<Layout title="フォロー中のアーティスト - ハロプロイベント">
  <AuthProvider client:only="react">
    <ProtectedRoute client:load>
      <div class="flex min-h-screen bg-gray-50">
        <SideNavigation activePage="followed-artists" client:load />
        <div class="flex-1">
          <AuthHeader client:load />
          <main class="p-6">
            <h1 class="text-2xl font-bold mb-6 pl-2 border-l-4 border-blue-500">フォロー中のアーティスト</h1>
            <FollowedArtists client:load />
          </main>
        </div>
      </div>
    </ProtectedRoute>
  </AuthProvider>
</Layout>